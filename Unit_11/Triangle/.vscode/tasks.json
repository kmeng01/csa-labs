{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "isShellCommand": true,
    "showOutput": "always",
    "args": [],
    "tasks": [
        {
            "taskName": "build",
            "command": "javac",
            "isShellCommand": true,
            "args": ["-g", "${fileBasename}"]
        },
        {
            "taskName": "run",
            "command": "java",
            "isTestCommand": true,
            "isShellCommand": true,
            "args": ["${fileBasenameNoExtension}"]
        }
    ]
}